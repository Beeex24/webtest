---

import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import FormattedDate from '../../components/FormattedDate.astro';

import {
  getCollection,
  type CollectionEntry,
} from "astro:content";

type BlogPage = {
  data: CollectionEntry<"device">[];
  start: number;
  end: number;
  total: number;
  currentPage: number;
  lastPage: number;
  url: {
    prev?: string;
    next?: string;
  };
};

export async function getStaticPaths({ paginate }: { paginate: any }) {
  const allPosts = await getCollection("device");
  const sortedPosts = allPosts.sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
  );
  return paginate(sortedPosts, { pageSize: 10 });
}

const { page } = Astro.props as { page: BlogPage };

function getPostUrl(post: CollectionEntry<'device'>) {
  if ('url' in post.data && post.data.url) {
    return `/${post.data.url}/`;
  }
  return `/device/${post.id}/`;
}
---

<!doctype html>
<html lang="ja">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      /* 全体のスタイル */
      body {
        font-family: "Arial", sans-serif;
        line-height: 1.6;
        background-color: #f4f4f9;
        margin: 0;
        padding: 0;
      }

      .blog-section {
        padding: 2rem;
        max-width: 1200px;
        margin: 0 auto;
      }

      .blog-section h1 {
        font-size: 2rem;
        text-align: center;
        margin-bottom: 2rem;
        color: #333;
      }
      .blog-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr); /* 2列固定 */
        gap: 2.5rem;
        margin-top: 2rem;
      }
      @media (max-width: 900px) {
        .blog-grid {
          grid-template-columns: 1fr; /* モバイルは1列 */
        }
      }

      .blog-card {
        position: relative;
        background: #181c24;
        border-radius: 18px;
        overflow: hidden;
        box-shadow:
          0 8px 24px rgba(40, 60, 120, 0.18),
          0 1.5px 8px rgba(0, 0, 0, 0.08);
        transition:
          transform 0.35s cubic-bezier(0.4, 2, 0.3, 1),
          box-shadow 0.35s;
        text-decoration: none;
        color: inherit;
        min-height: 340px;
        touch-action: manipulation;
        display: flex;
        flex-direction: column;
        cursor: pointer;
      }

      .blog-card:hover {
        transform: translateY(-12px) scale(1.03) rotate(-1deg);
        box-shadow:
          0 16px 32px rgba(40, 60, 120, 0.22),
          0 3px 16px rgba(0, 0, 0, 0.12);
      }

      .blog-card-image-wrap {
        position: relative;
        width: 100%;
        height: 200px;
        overflow: hidden;
      }

      .blog-card img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        transition: transform 0.4s cubic-bezier(0.4, 2, 0.3, 1);
      }

      .blog-card:hover img {
        transform: scale(1.08) rotate(-2deg);
      }

      .blog-card-image-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
          180deg,
          rgba(0, 0, 0, 0) 60%,
          rgba(24, 28, 36, 0.85) 100%
        );
        pointer-events: none;
      }

      .blog-card-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        padding: 1.5rem 1.2rem 1.2rem 1.2rem;
        position: relative;
        z-index: 2;
      }

      .blog-card-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #fff;
        margin-bottom: 0.6rem;
        letter-spacing: 0.02em;
        text-shadow: 0 2px 8px rgba(0, 0, 0, 0.18);
        border-left: 4px solid #2575fc;
        padding-left: 0.7em;
        line-height: 1.2;
      }

      .blog-card-description {
        font-size: 1.05rem;
        color: #e0e0e0;
        margin-bottom: 1.2rem;
        line-height: 1.5;
        min-height: 3.2em;
        text-shadow: 0 1px 4px rgba(0, 0, 0, 0.08);
      }

      .blog-card-date {
        font-size: 0.95rem;
        color: #8bb6ff;
        text-align: right;
        margin-top: auto;
        font-family: "Fira Mono", monospace;
        letter-spacing: 0.04em;
      }

      @media (max-width: 768px) {
        .blog-section {
          padding: 1rem;
        }
        .blog-card {
          min-height: 260px;
          font-size: 0.97rem;
        }
        .blog-card-content {
          padding: 1rem 0.7rem 0.9rem 0.7rem;
        }
        .blog-card-title {
          font-size: 1.1rem;
        }
        .blog-card-description {
          font-size: 0.92rem;
        }
      }

      .blog-main-layout {
        display: flex;
        flex-direction: row;
        gap: 2.5rem;
        max-width: 1600px;
        margin: 0 auto;
        padding: 2rem 0;
      }
      .blog-sidebar {
        width: 320px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(40, 60, 120, 0.08);
        padding: 1.5rem 1rem;
        height: fit-content;
        margin-top: 0.5rem;
        margin-right: -20rem;
      }
      .blog-sidebar h2 {
        font-size: 1.2rem;
        margin-bottom: 1rem;
        color: #2575fc;
        border-left: 4px solid #2575fc;
        padding-left: 0.5em;
      }
      .blog-sidebar ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }
      .blog-sidebar li {
        margin-bottom: 1.1em;
        border-bottom: 1px solid #e5e5e5;
        padding-bottom: 0.7em;
      }
      .blog-sidebar li:last-child {
        border-bottom: none;
      }
      .blog-sidebar a {
        text-decoration: none;
        color: #222;
        display: flex;
        flex-direction: column;
        gap: 0.2em;
        transition: color 0.2s;
      }
      .blog-sidebar a:hover .sidebar-title {
        color: #2575fc;
        text-decoration: underline;
      }
      .sidebar-title {
        font-weight: bold;
        font-size: 1em;
        line-height: 1.2;
      }
      .sidebar-date {
        font-size: 0.85em;
        color: #8bb6ff;
        font-family: "Fira Mono", monospace;
      }
      @media (max-width: 1000px) {
        .blog-main-layout {
          flex-direction: column;
        }
        .blog-sidebar {
          width: 100%;
          margin-top: 2rem;
        }
      }

      .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        margin: 2rem 0;
      }
      .pagination-prev,
      .pagination-next {
        padding: 0.5em 1em;
        background: #fff;
        color: #2575fc;
        border-radius: 4px;
        text-decoration: none;
        border: 1px solid #e0e0e0;
        font-weight: bold;
        transition: background 0.2s, color 0.2s;
      }
      .pagination-prev.disabled,
      .pagination-next.disabled {
        color: #aaa;
        border-color: #eee;
        pointer-events: none;
        background: #f5f5f5;
      }
      .pagination-info {
        font-weight: bold;
      }
    </style>
  </head>

  <body>
    <Header />
    <section class="affiliate-banner">
      <a href="https://www.amazon.co.jp/" target="_blank">
        <img
          src="https://via.placeholder.com/1200x200"
          alt="おすすめ商品バナー"
        />
      </a>
    </section>

    <main>
      <div class="blog-main-layout">
        <section class="blog-section">
          <h1>最新のブログ記事</h1>
          <div class="blog-grid">
            {
              page.data.map((post) => (
                <a href={`/device/${post.id}/`} class="blog-card" aria-label={post.data.title}>
                  <div class="blog-card-image-wrap">
                    <img src={post.data.heroImage} alt={post.data.title} />
                    <div class="blog-card-image-overlay" />
                  </div>
                  <div class="blog-card-content">
                    <div class="blog-card-title">{post.data.title}</div>
                    <div class="blog-card-description">
                      {post.data.description}
                    </div>
                    <div class="blog-card-date">
                      <FormattedDate date={post.data.pubDate} />
                    </div>
                  </div>
                </a>
              ))
            }
          </div>
          <nav class="pagination">
            {page.url.prev ? (
              <a href={page.url.prev} class="pagination-prev">前へ</a>
            ) : (
              <span class="pagination-prev disabled">前へ</span>
            )}
            <span class="pagination-info">
              {page.currentPage} / {page.lastPage}
            </span>
            {page.url.next ? (
              <a href={page.url.next} class="pagination-next">次へ</a>
            ) : (
              <span class="pagination-next disabled">次へ</span>
            )}
          </nav>
        </section>
      </div>
    </main>

    <section class="affiliate-section">
      <h2>おすすめのデバイス</h2>
      <div class="affiliate-grid">
        <div class="affiliate-card">
          <img
            src="https://via.placeholder.com/250x150"
            alt="Logicool G PRO X SUPERLIGHT"
          />
          <h3>Logicool G PRO X SUPERLIGHT</h3>
          <p>軽量で高性能なゲーミングマウス</p>
          <p class="price">¥19,000</p>
          <a href="https://www.amazon.co.jp/" target="_blank" class="button"
            >Amazonで見る</a
          >
        </div>
        <div class="affiliate-card">
          <img
            src="https://via.placeholder.com/250x150"
            alt="Razer BlackWidow V3"
          />
          <h3>Razer BlackWidow V3</h3>
          <p>快適なタイピングが可能なメカニカルキーボード</p>
          <p class="price">¥15,000</p>
          <a href="https://www.amazon.co.jp/" target="_blank" class="button"
            >Amazonで見る</a
          >
        </div>
        <div class="affiliate-card">
          <img
            src="https://via.placeholder.com/250x150"
            alt="BenQ ZOWIE XL2546K"
          />
          <h3>BenQ ZOWIE XL2546K</h3>
          <p>240Hz対応のゲーミングモニター</p>
          <p class="price">¥45,000</p>
          <a href="https://www.amazon.co.jp/" target="_blank" class="button"
            >Amazonで見る</a
          >
        </div>
        <div class="affiliate-card">
          <img
            src="https://via.placeholder.com/250x150"
            alt="SteelSeries QcK Heavy"
          />
          <h3>SteelSeries QcK Heavy</h3>
          <p>滑らかな操作感のマウスパッド</p>
          <p class="price">¥3,000</p>
          <a href="https://www.amazon.co.jp/" target="_blank" class="button"
            >Amazonで見る</a
          >
        </div>
      </div>
    </section>

    <style>
      .affiliate-banner {
        display: block;
        margin: 1rem auto;
        text-align: center;
      }

      .affiliate-banner img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      .affiliate-section {
        padding: 2rem;
        background-color: #f9f9f9;
        border-radius: 8px;
        margin-top: 2rem;
      }

      .affiliate-section h2 {
        font-size: 1.8rem;
        text-align: center;
        margin-bottom: 1.5rem;
        color: #333;
      }

      .affiliate-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
      }

      .affiliate-card {
        background: #fff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition:
          transform 0.3s ease,
          box-shadow 0.3s ease;
        text-align: center;
        padding: 1rem;
      }

      .affiliate-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
      }

      .affiliate-card img {
        width: 100%;
        height: auto;
        border-radius: 8px;
        margin-bottom: 1rem;
      }

      .affiliate-card h3 {
        font-size: 1.4rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
        color: #222;
      }

      .affiliate-card p {
        font-size: 1rem;
        color: #555;
        margin-bottom: 1rem;
      }

      .affiliate-card .price {
        font-size: 1.2rem;
        font-weight: bold;
        color: #007bff;
        margin-bottom: 1rem;
      }

      .affiliate-card .button {
        min-width: 120px;
        min-height: 44px;
        font-size: 1.05rem;
        padding: 0.75rem 1.5rem;
        display: inline-block;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s ease;
      }

      .affiliate-card .button:hover {
        background-color: #0056b3;
      }
    </style>

    <Footer />
  </body>
</html>
