---
import Layout from '../layouts/Riyoukiyaku.astro';
---

<Layout
    title="リンク"
    description="公式SNSや関連リンクはこちらからご覧ください。"
    pubDate={new Date('May 01 2025')}
>
    <section class="link-section">
        <h2>公式SNSリンク</h2>
        <ul class="link-list">
            <li>
                <a href="https://twitter.com/your_account" target="_blank" rel="noopener noreferrer">
                    <img src="/icons/logo-blackTW.png" alt="Twitter" />
                    X（旧Twitter）
                </a>
            </li>
            <li>
                <a href="https://www.instagram.com/your_account" target="_blank" rel="noopener noreferrer">
                    <img src="/icons/Instagram_Glyph_Gradient.png" alt="Instagram" />
                    Instagram
                </a>
            </li>
            <li>
                <a href="https://www.youtube.com/channel/your_channel" target="_blank" rel="noopener noreferrer">
                    <img src="/icons/sch 2024-06-22 221945.png" alt="YouTube" />
                    YouTube
                </a>
            </li>
            <li>
                <a href="https://www.tiktok.com/@your_account" target="_blank" rel="noopener noreferrer">
                    <img src="/icons/LINE_Brand_icon.png" alt="LINE" />
                    LINE
                </a>
            </li>
        </ul>
    </section>

    <style>
        .link-section {
            padding: 2rem;
            background: linear-gradient(135deg, #f9f9f9, #e0e0e0);
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .link-section h2 {
            font-size: 1.8rem;
            margin-bottom: 1rem;
            color: #333;
            text-align: center;
        }

        .link-list {
            list-style: none;
            padding: 0;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            align-items: center;
        }

        .link-list li {
            width: 100%;
            max-width: 400px;
        }

        .link-list a {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            text-decoration: none;
            color: #333;
            font-size: 1.2rem;
            transition: background-color 0.3s ease, box-shadow 0.3s ease, transform 0.2s ease;
        }

        .link-list a:hover {
            background-color: #f0f0f0;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transform: translateY(-2px);
        }

        .link-list img {
            width: 32px;
            height: 32px;
        }

        @media (max-width: 768px) {
            .link-list {
                flex-direction: column;
                gap: 1.5rem;
            }

            .link-list a {
                font-size: 1rem;
                padding: 0.8rem;
            }

            .link-list img {
                width: 28px;
                height: 28px;
            }
        }
    </style>
</Layout>